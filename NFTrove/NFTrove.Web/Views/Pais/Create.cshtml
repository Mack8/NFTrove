@model NFTrove.Application.DTOs.PaisDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>


<hr />
<div class="row justify-content-center">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ID" class="control-label"></label>
                <input asp-for="ID" class="form-control" />
                <span asp-validation-for="ID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ISO" class="control-label"></label>
                <input asp-for="ISO" class="form-control" />
                <span asp-validation-for="ISO" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion" class="control-label"></label>
                <input asp-for="Descripcion" class="form-control" />
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <br />
            <div class="row">

                <div class="col-lg-6 ">
                    <a asp-action="Index" class="btn btn-secondary btn-block">Cancel</a>
                </div>

                <div class="col-lg-6 d-flex justify-content-end">
                    <input type="submit" value="Create" class="btn btn-primary btn-block" />
                </div>
            </div>

        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
