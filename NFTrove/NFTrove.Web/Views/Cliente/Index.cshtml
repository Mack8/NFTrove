@model IEnumerable<NFTrove.Application.DTOs.ClienteDTO>

@{
    ViewData["Title"] = "Index";
}

<h1>CLIENTE</h1>

<div class="container">
    <div class="row mb-3">
        <div class="col-md-12 d-flex justify-content-end">
            <a asp-action="Create" class="btn btn-primary">Crear Cliente</a>
        </div>
    </div>

    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>@Html.DisplayNameFor(model => model.Identificacion)</th>
                <th>@Html.DisplayNameFor(model => model.Nombre)</th>
                <th>@Html.DisplayNameFor(model => model.Apellidos)</th>
                <th>@Html.DisplayNameFor(model => model.CorreoElectronico)</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.Identificacion)</td>
                    <td>@Html.DisplayFor(modelItem => item.Nombre)</td>
                    <td>@Html.DisplayFor(modelItem => item.Apellidos)</td>
                    <td>@Html.DisplayFor(modelItem => item.CorreoElectronico)</td>
                    <td class="text-right d-flex justify-content-end">
                        <a asp-action="Edit" asp-route-id="@item.Identificacion" class="btn btn-secondary" style="margin-right: 5px;">Editar</a>
                        <a href="@Url.Action("Details", new { id = item.Identificacion })" class="btn btn-info details-link" style="margin-right: 5px;">Detalles</a>


                        <a asp-action="Delete" asp-route-id="@item.Identificacion" class="btn btn-danger">Eliminar</a>
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>

<div id="detailsSection"></div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $(document).on('click', '.details-link', function (e) {
                e.preventDefault();
                var url = $(this).attr('href');
                $('#detailsSection').load(url);
            });
        });
    </script>
}



