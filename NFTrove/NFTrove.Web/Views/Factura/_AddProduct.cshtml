@model NFTrove.Web.ViewModels.ViewModelInput




<div class="row" id="MyAddProduct">
    <div class="col-md-4">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <div class="form-group">

            <label asp-for="IdProducto" name="IdProducto" class="control-label"></label>
            <input asp-for="IdProducto" id="IdProductoModal" type="text" autocomplete="off" class="form-control  form-control-sm" />
            <label id="ProductoNombreModal" name="ProductoNombreModal" class="fw-bold">-</label>
            <span asp-validation-for="IdProducto" class="text-danger"></span>
            <!--Hidden field with stock-->
            <input type="hidden" id="CantidadEnInventarioModal" />
        </div>
        <div class="form-group">
            <label asp-for="Cantidad" class="control-label"></label>
            <input asp-for="Cantidad" id="CantidadModal" type="number" class="form-control form-control-sm" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Precio" class="control-label"></label>
            <input asp-for="Precio" id="PrecioModal" readonly type="number" class="form-control  form-control-sm" />
            <span asp-validation-for="Precio"   class="text-danger"></span>
        </div>
        <br />
        <!--Call JavaScript addProducto -->
        <button type="button" class="btn btn-success" onclick="addProduct()">Add Product</button>
    </div>
    <div class="col-md-4 text-center">
        <img src="/Images/nophoto.jpg" class="img-responsive" style="height:80%;width:80%" id="ImgProducto">
    </div>
</div>




<div>
    <a asp-action="Index">Back to List</a>
</div>



@section Scripts {

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
